<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameProject.Views.ConnectFour"
             Title="ConnectFour">
    <ScrollView Orientation="Both">
        <ScrollView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Padding="20,20,10,20">
                    <Button x:Name="BackButton" Text="Go back" WidthRequest="100" HorizontalOptions="Start" Clicked="OnBackButtonClicked" />
                </Frame>

                <Label x:Name="TitleLabel" Text="{Binding TitleLabel}" FontSize="24" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

                <ScrollView Grid.Row="1" Orientation="Vertical">
                    <Grid x:Name="GameGrid" Grid.Row="1" BackgroundColor="Blue" Margin="0,10,0,0" ColumnSpacing="5" RowSpacing="5">

                    </Grid>
                </ScrollView>
            </Grid>
        </ScrollView.Content>
    </ScrollView>
</ContentPage>