<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameProject"
             x:Class="GameProject.Views.InputPromptPage">
    <StackLayout WidthRequest="600" HeightRequest="900" Margin="0,30,0,0">
        <Label Text="Enter a username:" />
        <Entry Margin="0,0,0,50" BackgroundColor="White" TextColor="Black" x:Name="inputEntry" />

        <StackLayout Orientation="Horizontal">
            <Button Text="OK" Clicked="OnOKClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" Margin="0,0,0,0" />
        </StackLayout>
    </StackLayout>


</ContentPage>
