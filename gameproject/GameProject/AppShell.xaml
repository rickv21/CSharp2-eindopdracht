<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:GameProject.Views"
       x:Class="GameProject.AppShell"
       Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Main" Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Title="Memory" Route="Memory" ContentTemplate="{DataTemplate views:Memory}" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="ConnectFour"
        ContentTemplate="{DataTemplate local:ConnectFour}"
        Route="ConnectFour" />
</Shell>
